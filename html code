    <script>
      function insert(num){
        document.form.text.value=document.form.text.value+num;
      }
      function equal (){
        var exit=document.form.text.value;
        if(exit){
        document.form.text.value=eval(exit)
          }
      }
      function clean(){
        document.form.text.value="";
      }
      
    </script>
